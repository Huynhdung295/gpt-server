{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
        "*": ["node_modules/*", "src/types/*"],
    },
    "target": "ESNext",                                 
    "module": "ESNext",    
},
"include": ["./src/**/*"]
}
